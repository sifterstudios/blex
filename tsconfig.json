{
  "compilerOptions": {
      "jsx": "react"
  },
  "compilerOptions": {
    "baseUrl": "src",
    // Optional, but makes it so you donâ€™t have to use relative
    // paths for imports. Add as many folders as you need.
    "paths": {
      "components": [
        ",./components"
      ]
    },
    // Target latest version of ECMAScript.
    "target": "ESNext",
    "allowJs": true,
    "outDir": "./lib/cjs/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,

    // Search under node_modules for non-relative imports.
    "moduleResolution": "node",
    "jsx": "react",
    // Don't emit; allow Babel to transform files.
    "noEmit": true,
    // Import non-ES modules as default imports.
    "esModuleInterop": true
  },
  "include": [
    "src*//***/*//*.ts*",
    "frontend*//***/*//*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}